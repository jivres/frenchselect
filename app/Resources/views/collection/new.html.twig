{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.js-datepicker').datepicker({
                format: 'dd/mm/yyyy'
            });
        });
    </script>
{% endblock %}

{% block body %}
<ol class="breadcrumb">

    <li class="breadcrumb-item"><a href="{{ path('b2b_backoffice_index') }}">Accueil</a></li>
    <li class="breadcrumb-item"><a href="{{ path('backoffice_brand_index') }}">Marques</a></li>
    <li class="breadcrumb-item"><a
                href="{{ path('backoffice_brand_show', {'id': collection.brand.id}) }}">{{ collection.brand }}</a></li>
    <li class="breadcrumb-item active">Nouvelle Collection</li>

</ol>
<div class="d-flex justify-content-center">
    <a href="{{ path('backoffice_brand_show', {'id': collection.brand.id}) }}" class="btn btn-primary">Retour à la
        marque</a></div>
<h1 class="text-center">Nouvelle Collection</h1>

<div class="row">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-8 login-form border rounded">
        {{ form_start(form) }}

        <div class="row">

            <div class="form-group col-md-12">
                {{ form_label(form.name) }}<span class="required-chip">*</span>
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                {{ form_label(form.year) }}<span class="required-chip">*</span>
                {{ form_widget(form.year) }}
            </div>

            <div class="form-group col-md-4">
                {{ form_label(form.season) }}<span class="required-chip">*</span>
                {{ form_widget(form.season, {'attr': {'class': 'custom-select'}}) }}
            </div>
            <div class="form-group col-md-4 date" id='datetimepicker'>
                {{ form_label(form.endDate) }}<span class="required-chip">*</span>
                {{ form_widget(form.endDate, {'attr': {'class': 'form-control input-inline js-datepicker'}}) }}
            </div>
        </div>

        <div class="row">

            <div class="form-group col-md-6">
                {{ form_label(form.lookbook) }}
                {{ form_widget(form.lookbook) }}
            </div>

            <div class="form-group col-md-6">
                {{ form_label(form.lifestyle) }}<span class="required-chip">*</span>
                {{ form_widget(form.lifestyle) }}
            </div>
        </div>
        <div class="text-center mt-3">
            <input class="btn btn-primary" type="submit" value="Créer la collection"/>
        </div>
        {{ form_end(form) }}

        <div class="col-lg-2">
        </div>
    </div>

    {% endblock %}
