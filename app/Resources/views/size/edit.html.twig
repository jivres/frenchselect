{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('b2b_backoffice_index') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('backoffice_size_index') }}">Gestion des tailles</a></li>
        <li class="breadcrumb-item active">{{ size.val }}</li>
    </ol>

    <div class="d-flex justify-content-center">
        <a href="{{ path('backoffice_size_index') }}" class="btn btn-primary">Retour à la liste</a>
        <a href="{{ path('backoffice_size_show', { 'id': size.id }) }}" class="btn btn-primary">Voir
            la taille</a>
    </div>

    <h1 class="text-center">Modification - {{ size.val }}</h1>

    <div class="row">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-8 login-form border rounded">
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <div class="text-center">
                <input class="btn btn-primary" type="submit" value="Modifier la taille"/>
            </div>
            {{ form_end(edit_form) }}
        </div>
        <div class="col-lg-2">
        </div>
    </div>

    <div class="m-3 text-right">
        {{ form_start(delete_form) }}
        <input class="btn btn-outline-danger del" type="submit" value="Supprimer la taille">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}

{% block js %}
    <script type="text/javascript">
        $(function () {
            $(".del").click(function () {
                return confirm("Etes-vous sûr de vouloir supprimer cet élément ?");
            });
        });
    </script>
{% endblock %}