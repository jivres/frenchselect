{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('b2b_backoffice_index') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('backoffice_size_index') }}">Gestion des tailles</a></li>
        <li class="breadcrumb-item active">{{ size.val }}</li>
    </ol>

    <div class="d-flex justify-content-center">
        <a href="{{ path('backoffice_size_index') }}" class="btn btn-primary">Retour à la liste</a>
        <a href="{{ path('backoffice_size_edit', { 'id': size.id }) }}" class="btn btn-primary">Modifier</a>
    </div>

    <h1 class="text-center">Taille - {{ size.val }}</h1>

    <div class="row">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-8 login-form border rounded">
            <dt class="col-sm-3">Identifiant</dt>
            <dd class="col-sm-9">{{ size.id }}</dd>

            <dt class="col-sm-3">Libellé</dt>
            <dd class="col-sm-9">{{ size.val }}</dd>


            <dt class="col-sm-3">Rang/Order</dt>
            <dd class="col-sm-9">{{ size.rank }}</dd>
        </div>
        <div class="col-lg-2">
        </div>
    </div>

{% endblock %}
