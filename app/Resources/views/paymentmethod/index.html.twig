{% extends 'base.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('b2b_backoffice_index') }}">Accueil</a></li>
        <li class="breadcrumb-item active">Gestion des modes de paiement</li>
    </ol>

    <div class="d-flex justify-content-center">
        <a href="{{ path('backoffice_paymentmethod_new') }}" class="btn btn-primary">Cr√©er un nouveau mode de
            paiement</a>
    </div>

    <h1 class="text-center">Gestion des modes de paiement</h1>

    <div class="container">
        <table class="table table-striped mt-3 bg-white border">
            <thead>
            <tr>
                <th scope="col">Mode de paiement</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for paymentMethod in paymentMethods %}
                <tr>
                    <td>{{ paymentMethod.label }}</td>
                    <td>
                        <a class="btn btn-primary"
                           href="{{ path('backoffice_paymentmethod_show', { 'id': paymentMethod.id }) }}">Voir</a>
                        <a class="btn btn-primary"
                           href="{{ path('backoffice_paymentmethod_edit', { 'id': paymentMethod.id }) }}">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
