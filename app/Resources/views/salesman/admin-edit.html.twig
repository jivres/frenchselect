{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('b2b_backoffice_index') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('backoffice_salesman_index') }}">Commerciaux</a></li>
        <li class="breadcrumb-item active">{{ salesman.lastName }}</li>
    </ol>

<div class="d-flex justify-content-center">
    <a href="{{ path('backoffice_salesman_index') }}" class="btn btn-primary">Retour à la liste</a>
    <a href="{{ path('backoffice_salesman_show', { 'id': salesman.id }) }}" class="btn btn-primary">Voir le commercial</a>
</div>

    <h1 class="text-center">Commercial - {{ salesman.lastName }} {{ salesman.firstName }}</h1>

    <div class="row">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-8 login-form border rounded">
            {{ form_start(edit_form) }}

            {% include 'salesman/form.html.twig' with {'form': edit_form} %}

            {{ form_widget(edit_form._token) }}
            <div class="text-center">
                <input class="btn btn-primary" type="submit" value="Modifier le commercial"/>
            </div>
            {{ form_end(edit_form, { 'render_rest': false }) }}
        </div>

        <div class="col-lg-2">
        </div>
    </div>

    <div class="m-3 text-right">
        {{ form_start(delete_form) }}
        <input class="btn btn-outline-danger del" type="submit" value="Supprimer le commercial">
        {{ form_end(delete_form) }}
    </div>

{% endblock %}
{% block js %}
    <script type="text/javascript">
        $(function () {
            $(".del").click(function () {
                return confirm("Etes-vous sûr de vouloir supprimer cet élément ?");
            });
        });
    </script>
{% endblock %}
