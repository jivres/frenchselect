{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('b2b_backoffice_index') }}">Accueil</a></li>
        <li class="breadcrumb-item active">Clients</li>
    </ol>

    <h1>Liste des Clients</h1>

    <table class="table table-stripped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom d'utilisateur</th>
            <th>Nom</th>
            <th>TVA</th>
            <th>Adresse de facturation</th>
            <th>Directeur des achats</th>
            <th>Directeur financier</th>
            <th>Boutiques</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td><a href="{{ path('backoffice_customer_show', { 'id': customer.id }) }}">{{ customer.id }}</a></td>
                <td>{{ customer.username }}</td>
                <td>{{ customer.companyName }}</td>
                <td>{{ customer.numTVA }}</td>
                <td>{{ customer.billingAddress }}, {{ customer.billingZP }} {{ customer.billingTown }}</td>
                <td>{{ customer.purchasingManager }}</td>
                <td>{{ customer.financialManager }}</td>
                <td></td>
                <td>
                    <a href="{{ path('backoffice_customer_show', { 'id': customer.id }) }}" class="btn btn-outline-dark">Détail</a>
                    <a href="{{ path('backoffice_customer_edit', { 'id': customer.id }) }}" class="btn btn-outline-dark">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backoffice_customer_new') }}" class="btn btn-primary">Créer un nouveau client</a>
{% endblock %}
