{% extends 'base.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('b2b_backoffice_index') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('backoffice_product_show', {'id' : allowedColor.product.id}) }}">{{ allowedColor.product.name }}</a>
        </li>
        <li class="breadcrumb-item active">{{ allowedColor.color.label }}</li>
    </ol>
    <div class="d-flex justify-content-center">
        <a  href="{{ path('backoffice_product_show', {'id' : allowedColor.product.id}) }}" class="btn btn-primary">Retour au produit</a>
    </div>

    <h1 class="text-center">{{ allowedColor.product.name }} - {{ allowedColor.color.label }}</h1>
    <div class="row">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-8 login-form border rounded">
            {{ form_start(edit_form) }}
            {% include 'allowedcolor/form.html.twig' with {'form': edit_form} %}

            <div class="form-block text-center mt-4">
                <button type="submit" class="btn btn-primary">Modifier le produit</button>
            </div>
            {{ form_end(edit_form) }}
        </div>
        <div class="col-lg-2">
        </div>
    </div>
    <div class="m-3 text-right">
        {{ form_start(delete_form) }}
        <input class="btn btn-outline-danger del" type="submit" value="Supprimer la couleur">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
{% block js %}
    <script type="text/javascript">
        $(function () {
            $(".del").click(function () {
                return confirm("Etes-vous sûr de vouloir supprimer cet élément ?");
            });
        });
    </script>
{% endblock %}
