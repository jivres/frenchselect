{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('b2b_backoffice_index') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('backoffice_brand_index') }}">Marques</a></li>
        <li class="breadcrumb-item"><a
                    href="{{ path('backoffice_brand_show', { 'id': product.getBrand().id }) }}">{{ product.getBrand().getBrandName() }}</a>
        </li>
        <li class="breadcrumb-item"><a
                    href="{{ path('collection_show', { 'id': product.collection.id }) }}">Collection {{ product.collection.name }}</a>
        </li>
        <li class="breadcrumb-item active">{{ product.name }}</li>
    </ol>

    <div class="d-flex justify-content-center">
        <a href="{{ path('collection_show', { 'id': product.collection.id }) }}" class="btn btn-primary">Retour à la
            collection</a>
        <a class="btn btn-primary" href="{{ path('backoffice_product_show', { 'id' : product.Id() }) }}">Voir le
            produit</a>
    </div>

    <div class="row">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-8 login-form border rounded">
            {{ form_start(edit_form) }}

            {% include 'product/form.html.twig' with { 'form': edit_form } %}

            {{ form_widget(edit_form._token) }}

            <div class="form-block text-center mt-4">
                <input class="btn btn-primary" type="submit" value="Créer le produit"/>
            </div>

            {{ form_end(edit_form, { 'render_rest': false }) }}
        </div>
        <div class="col-lg-2">
        </div>

    </div>
    <div class="m-3 text-right">
        {{ form_start(delete_form) }}
        <input class="btn btn-outline-danger del" type="submit" value="Supprimer">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}

    {% block js %}
        <script type="text/javascript">
            $(function () {
                $(".del").click(function () {
                    return confirm("Etes-vous sûr de vouloir supprimer cet élément ?");
                });
            });
        </script>
    {% endblock %}
