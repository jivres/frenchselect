{% extends 'command/layout.html.twig' %}

    {% set next_path = 'command_validate2' %}


{% block command %}

        <h2 style="text-align:center;">Informations sur la boutique</h2>
        <div class="col-lg-8 mt-3 mb-3" style="margin:auto;">
            {{ form_start(edit_form) }}

            <h3>Facturation</h3>
            <div class="form-group row">
                {{ form_label(edit_form.societyName, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(edit_form.societyName) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(edit_form.numTVA, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(edit_form.numTVA) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(edit_form.billingAddress, null, {}) }}
                    {{ form_widget(edit_form.billingAddress) }}
                </div>
                <div class="form-group col-md-4">
                    {{ form_label(edit_form.billingTown, null, {}) }}
                    {{ form_widget(edit_form.billingTown) }}
                </div>
                <div class="form-group col-md-2">
                    {{ form_label(edit_form.billingZP, null, {}) }}
                    {{ form_widget(edit_form.billingZP) }}
                </div>
            </div>

            <hr class="mt-5 mb-5">

            <h3 class="mt-3 mb-3">Livraison</h3>
            <div class="form-group row">
                {{ form_label(edit_form.shop, null, {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                <div class="col-sm-9">
                    {{ form_widget(edit_form.shop, {'attr': {'class': 'custom-select'}}) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(edit_form.deliveryAddress, null, {}) }}
                    {{ form_widget(edit_form.deliveryAddress) }}
                </div>
                <div class="form-group col-md-4">
                    {{ form_label(edit_form.deliveryTown, null, {}) }}
                    {{ form_widget(edit_form.deliveryTown) }}
                </div>
                <div class="form-group col-md-2">
                    {{ form_label(edit_form.deliveryZP, null, {}) }}
                    {{ form_widget(edit_form.deliveryZP) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(edit_form.phone, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(edit_form.phone, {'attr': {'placeholder' : '01 23 45 67 89'}}) }}
                </div>
            </div>
            {{ form_row(edit_form.comment, {'attr': {'placeholder': 'Saisissez votre commentaire concernant la livraison'}}) }}

            {{ form_widget(edit_form._token) }}
            <input class="btn btn-primary" type="submit" value="Modifier les informations" />
            {{ form_end(edit_form, {'render_rest': false}) }}
        </div>

{% endblock %}