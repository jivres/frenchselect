{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('b2b_backoffice_index') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('backoffice_salon_index') }}">Salons</a></li>
        <li class="breadcrumb-item active">{{ salon.name }}</li>
    </ol>
    <div class="d-flex justify-content-center">
        <a href="{{ path('backoffice_salon_index') }}" class="btn btn-primary">Retour à la liste</a>
        <a href="{{ path('backoffice_salon_details', {'id': salon.id } ) }}" class="btn btn-primary">Voir le salon</a>
    </div>
    <h1 class="text-center">Salon - {{ salon.name }}</h1>

    <div class="row">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-8 login-form border rounded">
            {{ form_start(form) }}
            {% include 'salon/form.html.twig' with {'form': form} %}

            <div class="form-block text-center mt-4">
                <button type="submit" class="btn btn-primary">Modifier le salon</button>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="col-lg-2">
        </div>
    </div>
    <div class="m-3 text-right">
        {{ form_start(delete_form) }}
        <input class="btn btn-outline-danger del" type="submit" value="Supprimer le salon">
        {{ form_end(delete_form) }}
    </div>

{% endblock %}

{% block js %}
    <script type="text/javascript">
        $(function () {
            $(".del").click(function () {
                return confirm("Etes-vous sûr de vouloir supprimer cet élément ?");
            });
        });
    </script>
{% endblock %}