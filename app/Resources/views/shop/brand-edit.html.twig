{% set active = 'customers' %}
{% extends "layout.html.twig" %}

{% block title %}Showroom French Select - Modification {{ shop }} {% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}{{ parent() }}{% endblock %}

{% block content %}

    <section class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('brand_customer_index') }}">Mes Clients</a></li>
            <li class="breadcrumb-item"><a
                        href={{ path('brand_customer_show', {'id': shop.customer.id}) }}>{{ shop.customer }}</a></li>
            <li class="breadcrumb-item active">{{ shop }}</li>
        </ol>

        <div class="d-flex justify-content-center">
            <a href="{{ path('brand_customer_show', {'id': shop.customer.id}) }}" class="btn btn-primary">Retour au
                client</a>
        </div>

        <h1 class="text-center">{{ shop.customer }} - {{ shop }}</h1>

        <div class="row">
            <div class="col-lg-2">
            </div>
            <div class="col-lg-8 login-form border rounded">
                {{ form_start(edit_form) }}

                {% include 'shop/form.html.twig' with {'form': edit_form} %}
                <div class="text-center">
                    <input class="btn btn-primary" type="submit" value="Modifier la boutique"/>
                    {{ form_widget(edit_form._token) }}
                    {{ form_end(edit_form, { 'render_rest': false }) }}
                </div>
            </div>
            <div class="col-lg-2">
            </div>
        </div>


        {% if canDelete %}
            <div class="m-3 text-right">
                {{ form_start(delete_form, {'attr': {'class': 'd-inline-block'}}) }}
                <input class="btn btn-outline-danger del" type="submit" value="Supprimer la boutique">
                {{ form_end(delete_form) }}
            </div>
        {% else %}
            <div class="m-3 text-right">
            <span class="d-inline-block" tabindex="0" data-toggle="tooltip" data-placement="top"
                  title="{{ deleteMessage }}">
                <button class="btn btn-primary btn-orange ml-2 mr-2 disabled" style="pointer-events: none;"
                        type="button" data-toggle="tooltip" data-placement="top" title="Tooltip on top" disabled>
                    Supprimer la boutique
                </button>
            </span>
            </div>
        {% endif %}
    </section>
{% endblock %}
